<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-sabanci fw-bold">Girişimciler</h2>
    <span class="badge bg-secondary">
        <%= girisimciler.length %> Girişimci Listelendi
    </span>
</div>

<div class="card shadow-sm">
    <div class="card-body p-0">
        <table class="table table-hover table-striped mb-0 align-middle">
            <thead class="bg-light sticky-top">
                <tr>
                    <th scope="col" class="ps-4">İşletme Adı</th>
                    <th scope="col" class="text-end">Talep Bütçesi</th>
                    <th scope="col" class="text-center">Kadın Çalışan</th>
                    <th scope="col" class="text-center">Engelli Çalışan</th>
                    <th scope="col" class="text-center">Kuruluş</th>
                    <th scope="col" class="text-center">Öncelik Puanı</th>
                </tr>
            </thead>
            <tbody>
                <% girisimciler.forEach(g=> { %>
                    <tr>
                        <td class="ps-4 fw-medium">
                            <%= g.isletme_adi %>
                        </td>
                        <td class="text-end font-monospace">
                            <%= new Intl.NumberFormat('tr-TR').format(g.talep_butcesi) %> TL
                        </td>
                        <td class="text-center">%<%= (g.kadin_calisan_orani * 100).toFixed(0) %>
                        </td>
                        <td class="text-center">%<%= (g.engelli_calisan_orani * 100).toFixed(0) %>
                        </td>
                        <td class="text-center">
                            <%= g.kurulus_yili %>
                        </td>
                        <td class="text-center">
                            <% let badgeClass='bg-secondary' ; if (g.oncelik_puani_hesapli>= 80) badgeClass =
                                'bg-primary';
                                else if (g.oncelik_puani_hesapli >= 50) badgeClass = 'bg-info text-dark';
                                %>
                                <span class="badge <%= badgeClass %> rounded-pill px-3 py-2">
                                    <%= g.oncelik_puani_hesapli %>
                                </span>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
</div>