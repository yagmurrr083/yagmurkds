<!-- SECTION 1: INFO CARDS -->
<div class="row g-4 mb-5">
    <!-- Card 1: Tahmini Getiri (ML) -->
    <div class="col-md-4">
        <div class="card h-100 position-relative border-start border-5 border-success">
            <div class="card-body text-center d-flex flex-column justify-content-center p-4">
                <div class="mb-2 text-success opacity-75">
                    <i class="fas fa-chart-line fa-2x"></i>
                </div>
                <h6 class="text-muted text-uppercase fw-bold ls-1">Tahmini Yıllık Getiri</h6>
                <!-- Maintained ID 'val-tahmini-getiri' for JS compatibility -->
                <h2 class="display-6 fw-bold text-dark my-2" id="val-tahmini-getiri">
                    <%= new Intl.NumberFormat('tr-TR', { style: 'currency' , currency: 'TRY' }).format(getiri || 0) %>
                </h2>
                <div class="badge bg-light text-dark border mt-2 py-2 px-3 rounded-pill">
                    <i class="fas fa-brain text-primary me-1"></i>
                    Makine Öğrenmesi Destekli Analiz
                    <br>
                    <small class="text-muted fw-normal" id="label-margin-rate">(Marj Öngörüsü: %<%= marginRate %>
                            )</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Card 2: Kadın Girişimci Bütçesi -->
    <div class="col-md-4">
        <div class="card h-100 position-relative border-start border-5 border-info">
            <div class="card-body text-center d-flex flex-column justify-content-center p-4">
                <div class="mb-2 text-info opacity-75">
                    <i class="fas fa-hand-holding-heart fa-2x"></i>
                </div>
                <h6 class="text-muted text-uppercase fw-bold ls-1">Kadın Girişimci Bütçesi</h6>
                <!-- Maintained ID 'val-kadin-butcesi' for JS compatibility -->
                <h2 class="display-6 fw-bold text-dark my-2" id="val-kadin-butcesi">
                    <%= new Intl.NumberFormat('tr-TR', { style: 'currency' , currency: 'TRY' }).format(butce || 0) %>
                </h2>
                <div class="mt-2 text-muted small">
                    <i class="fas fa-info-circle me-1"></i>
                    Net Karın <strong>%72</strong>'si tahsis edilir.
                </div>
            </div>
        </div>
    </div>

    <!-- Card 3: Reference Firma -->
    <div class="col-md-4">
        <div class="card h-100 bg-corporate text-white">
            <div class="card-body text-center d-flex flex-column justify-content-center p-4">
                <h6 class="text-white-50 text-uppercase fw-bold mb-3">Analiz Edilen Firma</h6>
                <h3 class="fw-bold mb-4" id="selected-firm-name">
                    <%= (activeFirm && (activeFirm.firma_adi || activeFirm.ad)) ? (activeFirm.firma_adi ||
                        activeFirm.ad) : 'Firma Seçilmedi' %>
                </h3>
                <!-- Maintained ID 'referenceFirmModal' for compatibility -->
                <button class="btn btn-light text-corporate fw-bold w-75 mx-auto rounded-pill shadow-sm"
                    data-bs-toggle="modal" data-bs-target="#referenceFirmModal">
                    <i class="fas fa-exchange-alt me-2"></i>Firma Değiştir
                </button>
            </div>
        </div>
    </div>
</div>

<!-- SECTION 2: CHARTS (Middle Row) -->
<div class="row g-4 mb-5">
    <!-- Sustainability Leaders (Pie) -->
    <div class="col-md-5">
        <div class="card h-100">
            <div class="card-header bg-transparent fw-bold text-sabanci">Sürdürülebilirlik Liderleri (Puan)</div>
            <div class="card-body">
                <div class="chart-container" style="height: 300px; position: relative;">
                    <canvas id="chartLeaders"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Carbon Footprint Trend (Line) -->
    <div class="col-md-7">
        <div class="card h-100">
            <div
                class="card-header bg-transparent fw-bold text-sabanci d-flex justify-content-between align-items-center">
                <span>Karbon Ayak İzi Trendi</span>
                <div class="d-flex align-items-center gap-2">
                    <label for="thresholdInput" class="small text-muted mb-0">Eşik Değeri:</label>
                    <input type="number" id="thresholdInput" class="form-control form-control-sm" style="width: 100px;"
                        value="<%= karbonEsik %>">
                    <button class="btn btn-sm btn-outline-secondary" id="btnUpdateThreshold">Güncelle</button>
                </div>
            </div>
            <div class="card-body">
                <div class="chart-container" style="height: 300px; position: relative;">
                    <canvas id="chartCarbon"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- SECTION 3: ENTREPRENEUR ANALYSIS (Bottom Row) -->
<div class="row mb-5">
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-transparent fw-bold text-sabanci">Girişimci Uyumluluk Analizi</div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-9">
                        <div class="chart-container" style="height: 400px;">
                            <canvas id="chartEntrepreneurs"></canvas>
                        </div>
                    </div>
                    <div class="col-md-3 border-start">
                        <h6 class="mb-4">Analiz Ağırlıkları</h6>

                        <div class="mb-4">
                            <label for="w1" class="form-label d-flex justify-content-between">
                                <span>Kadın Çalışan Oranı</span>
                                <span id="val-w1" class="fw-bold">50</span>
                            </label>
                            <input type="range" class="form-range" id="w1" min="0" max="100" value="50">
                        </div>

                        <div class="mb-4">
                            <label for="w2" class="form-label d-flex justify-content-between">
                                <span>Engelli Çalışan Oranı</span>
                                <span id="val-w2" class="fw-bold">30</span>
                            </label>
                            <input type="range" class="form-range" id="w2" min="0" max="100" value="30">
                        </div>

                        <div class="mb-4">
                            <label for="w3" class="form-label d-flex justify-content-between">
                                <span>Kuruluş Yılı (Yenilik)</span>
                                <span id="val-w3" class="fw-bold">20</span>
                            </label>
                            <input type="range" class="form-range" id="w3" min="0" max="100" value="20">
                        </div>

                        <div class="alert alert-info small">
                            <i class="bi bi-info-circle"></i> Ağırlıkları değiştirerek analiz sonuçlarını anlık olarak
                            güncelleyebilirsiniz.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Reference Firm Modal -->
<div class="modal fade" id="referenceFirmModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Referans Firma Seç</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                    aria-label="Close"></button>
            </div>
            <div class="modal-body p-0">
                <div class="list-group list-group-flush" id="firmList">
                    <!-- Loaded via AJAX -->
                    <div class="text-center p-4">
                        <div class="spinner-border text-primary" role="status"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>